!!!
%html
  %head
    %meta{:name => "viewport", :content => "width=device-width, initial-scale=1.0"}
    %title= content_for?(:title) ? yield(:title) : 'Pyp'
    %meta{:name => "description", :content => "#{content_for?(:description) ? yield(:description) : 'Pyp'}"}
    = stylesheet_link_tag "application", media: "all", "data-turbolinks-track" => true
    = stylesheet_link_tag 'yeti', media: 'all', 'data-turbolinks-track' => true

    = javascript_include_tag "application", "data-turbolinks-track" => true
    = javascript_include_tag 'yeti', 'data-turbolinks-track' => true
    = csrf_meta_tags
  %body.photo.autumn
    = render 'layouts/navigation'
    .container
      .errors__container
        = render 'layouts/messages'
      = yield
      %footer.page__footer
